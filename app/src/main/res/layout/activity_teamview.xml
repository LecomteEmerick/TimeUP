<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1.0"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team A :"
            android:id="@+id/textView" />

        <TextView
            android:layout_weight="1.0"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team B :"
            android:id="@+id/textView2" />


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/listViewTeamA" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewTeamB"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Attention aux textes en durs. Devrait être dans le fichier strings.xml -->
        <!-- Pour une fois vous c'est l'inverse. Pour les tailles autres que le textes, il vaut mieux
        utiliser des dp et non des sp -->
        <TextView
            android:text="Timer : "
            android:layout_margin="10sp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Dans un linearLayout, l'attribut centerHorizontal n'existe pas.
        Si vous voulez centrer dans son conteneur, il faut utiliser layout_gravity="center"
        et si vous voulez centrer les textes ou éléments héritants du texte, il faut utiliser gravity="center" -->

        <!-- Ici on a pas vraiment de retour sur quel élément est séléctionné une fois qu'on a cliqué.
        Ce qui vous intéressait ici, c'est le composant RadioButton ou lieu de Button -->
        <Button
            android:onClick="onChangeTimerFive"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5s"
            android:layout_centerHorizontal="true" />

        <Button
            android:onClick="onChangeTimerThirty"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30s"
            android:layout_centerHorizontal="true" />

        <Button
            android:onClick="onChangeTimerNinety"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90s"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <!-- Oui, attention pas de balise onClick ^^ -->
    <Button
        android:onClick="onPlayClicked"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jouer"
        android:id="@+id/buttonPlay"
        android:layout_centerHorizontal="true" />



</LinearLayout>